rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: Kiểm tra user đã đăng nhập
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: Kiểm tra user đang truy cập document của chính mình
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function: Kiểm tra user có phải là admin không
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Collection: users
    // Cho phép user đọc document của chính mình, Admin được đọc tất cả
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if false; // Chỉ backend mới được write
    }
    
    // Collection: students
    // Cho phép student đọc document của chính mình, Admin được đọc tất cả
    match /students/{studentId} {
      allow read: if isOwner(studentId) || isAdmin();
      allow write: if false; // Chỉ backend mới được write
    }
    
    // Tất cả các collection khác: deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

